<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bg_background"
    tools:context=".Activitys.TelaPrincipal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:backgroundTint="@color/white"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="5dp">


            <Button
                android:id="@+id/btnVelocidade"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_principal"
                android:drawableTop="@drawable/velocidade"
                android:gravity="center"
                android:text="DADOS VELOCIDADE"
                android:textColor="@android:color/white"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="25dp"
                />

            <Button
                android:id="@+id/btnAlarme"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_principal"
                android:drawableTop="@drawable/alarme"
                android:gravity="center"
                android:text="ALTERAR ALARMES"
                android:textColor="@android:color/white"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="100dp" />

            <Button
                android:id="@+id/btnGraficoRpm"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_principal"
                android:drawableTop="@drawable/graficorpm"
                android:gravity="center"
                android:text="GRÃFICO VELOCIDADE"
                android:textColor="@android:color/white"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="100dp" />

        </LinearLayout>


    </ScrollView>


</LinearLayout>